<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<ImageView
    android:id="@+id/background_image"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:src="@drawable/set1_pic1"
    android:scaleType="fitCenter"
    />
<Button
    android:id="@+id/question_text"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:text="the question"
    android:textSize="20px"
    android:textColor="#fff"
    android:background="@drawable/btn_question"
    android:enabled="false"
    />
<Button
    android:id="@+id/answer1_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/question_text"
    android:text="answer 1"
    android:textSize="18px"
    android:textColor="#fff"
    android:background="@drawable/btn_outline"
    />
<Button
    android:id="@+id/answer2_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/answer1_button"
    android:text="answer 2"
    android:textSize="18px"
    android:textColor="#fff"
    android:background="@drawable/btn_outline"
    />
<Button
    android:id="@+id/answer3_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/answer2_button"
    android:text="answer 3"
    android:textSize="18px"
    android:textColor="#fff"
    android:background="@drawable/btn_outline"
    />
<Button
    android:id="@+id/answer4_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/answer3_button"
    android:text="answer 4"
    android:textSize="18px"
    android:textColor="#fff"
    android:background="@drawable/btn_outline"
    />
<Button
    android:id="@+id/level_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:text="Level 1"
    android:textSize="12px"
    android:textColor="#fff"
    android:background="@drawable/btn_question"
    android:enabled="false"
    />
<Button
    android:id="@+id/result_message"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/level_message"
    android:text="Ready for the next question?"
    android:textSize="18px"
    android:textColor="#fff"
    android:background="@drawable/btn_question"
    />
</RelativeLayout>
